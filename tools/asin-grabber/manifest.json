{
  "manifest_version": 3,
  "name": "Park Bingo ASIN Grabber",
  "version": "1.0.0",
  "description": "Extract Amazon product images and ASINs for Park Bingo affiliate products",
  "permissions": ["activeTab", "downloads"],
  "host_permissions": ["https://www.amazon.com/*", "https://amazon.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
